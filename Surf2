  <p>輸入股票代號進行分析</p>

  <div>
    <input id="sym" placeholder="例如 3376" />
    <button onclick="run()">開始</button>
  </div>

  <div id="box" class="panel" style="display:none">
    <div>股票代號：<span id="s" class="hl"></span></div>
    <div>即時價格：<span id="p" class="hl"></span></div>
    <div>建議方向：<span id="d" class="hl"></span></div>
    <div>建議價格：<span id="sp" class="hl"></span></div>
    <div>觸發條件：<span id="t" class="hl"></span></div>
  </div>

<script>
function run(){
  const sym=document.getElementById('sym').value.trim();
  if(!sym){alert('請輸入股票代號');return;}
  // TODO: 這裡串你後端中繼 API，以下先用模擬資料
  document.getElementById('box').style.display='block';
  document.getElementById('s').textContent=sym;
  document.getElementById('p').textContent='218.5 (模擬)';
  document.getElementById('d').textContent='做多 (模擬)';
  document.getElementById('sp').textContent='220.0';
  document.getElementById('t').textContent='大單敲入、型態確認、勝率88%';
}
</script>
